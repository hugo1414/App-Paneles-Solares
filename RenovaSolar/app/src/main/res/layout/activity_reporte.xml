<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.ReporteActivity"
    >
    <!--
    android:background="@drawable/fondo5"
    -->


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/idGridPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:padding="4dp"
        app:columnCount="1"
        app:rowCount="1"
        >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese Fecha"
                    android:id="@+id/tvDate"
                    android:layout_marginTop="10dp"
                    android:textSize="30sp"
                    android:layout_marginBottom="10sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/tvdate1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Fecha Inicial"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_action_name"
                    android:layout_marginBottom="10sp"
                    />
                <TextView
                    android:id="@+id/tvdate2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Fecha Final"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_action_name"
                    android:layout_marginBottom="10sp"
                    />
                <Button
                    android:id="@+id/buttonConsultar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Consultar"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="10sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:text="Ahorro Energetico"
                    />
                <TextView
                    android:id="@+id/resultado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:layout_marginBottom="10sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:text="0.2 USD"
                    />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/activity_main_piechart"
                    android:layout_width="match_parent"
                    android:layout_height="140dp" />



            </LinearLayout>



    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>